    "@mgcrea/fastify-session-redis-store": "^0.9.1",
    "@mgcrea/pino-pretty-compact": "^0.4.5",
    "@types/pino": "^6.3.6",
    "chalk": "^4.1.0",
    "fastify": "^3.14.1",
    "fastify-cookie": "^5.3.0",
    "fastify-passport": "^0.4.2",
    "http-errors": "^1.8.0",
    "ioredis": "^4.24.5",
    "make-promises-safe": "^5.1.0",
    "pino": "^6.11.2",
    "pino-colada": "^2.1.0",
    "pino-pretty": "^4.7.1"
