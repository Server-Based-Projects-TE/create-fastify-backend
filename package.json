  "scripts": {
    "start": "NODE_PATH=. ts-node-dev --require dotenv/config --respawn --transpile-only --project src/tsconfig.json src/index",
    "start:node": "NODE_PATH=. ts-node --require dotenv/config --transpile-only --project src/tsconfig.json src/index",
    "inspect": "NODE_PATH=. node --require dotenv/config --require ts-node/register/transpile-only --inspect src/index",
    "build": "rm -rf build/*; tsc --build src/",
    "test": "jest",
    "typecheck": "tsc --noEmit -p src/",
    "prettycheck": "prettier --check 'src/'",
    "lint": "eslint src/",
    "postbuild": "tsc-alias -p src/tsconfig.json && node .postbuild.js"
  },
  "dependencies": {
